    "version": "0.2.0",
    "configurations": [
        {
            "name": "hardhat test",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/hardhat",
            "args": ["test", "tests/HH-TimelockTest.js"], // second arg is optional and can contain a single test file
            "skipFiles": [
                "<node_internals>/**",
            ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**",
            ],
            "program": "${workspaceFolder}/hardhat.config.js"
        },
    ],
}